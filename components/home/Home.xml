<?xml version="1.0" encoding="utf-8"?>
<component name="Home" extends="JFScreen">
  <children>
    <HomeRows
      id="homeRows"
      showRowLabel="true"
      vertFocusAnimationStyle="fixedFocusWrap"
      rowFocusAnimationStyle="fixedFocusWrap"
      itemComponentName="HomeItem"
      numRows="3"
      rowLabelOffset="[[0,20]]"
      translation="[172, 158]" />
    <OptionsSlider id="options" />

    <Animation id="homeRowsSlideLeft" duration="0.2" easeFunction="outQuad">
      <Vector2DFieldInterpolator
        key="[0,1]"
        keyValue="[[89,158],[-411,158]]"
        fieldToInterp="homeRows.translation" />
    </Animation>

    <Animation id="homeRowsSlideRight" duration="0.2" easeFunction="outQuad">
      <Vector2DFieldInterpolator
        key="[0,1]"
        keyValue="[[-411,158],[89,158]]"
        fieldToInterp="homeRows.translation" />
    </Animation>

    <Animation id="optionsSlideIn" duration="0.2" easeFunction="outQuad">
      <Vector2DFieldInterpolator
        key="[0,1]"
        keyValue="[[500,89],[0,89]]"
        fieldToInterp="options.translation" />
    </Animation>

    <Animation id="optionsSlideOut" duration="0.2" easeFunction="outQuad">
      <Vector2DFieldInterpolator
        key="[0,1]"
        keyValue="[[0,89],[500,89]]"
        fieldToInterp="options.translation" />
    </Animation>
  </children>

  <interface>
    <field id="playlistData" type="array" />
    <field id="selectedItem" alias="homeRows.selectedItem" />
    <field id="quickPlayNode" alias="homeRows.quickPlayNode" />
    <field id="showSidebar" type="boolean" value="true" />
    <function name="refresh" />
    <function name="loadLibraries" />
  </interface>
</component>