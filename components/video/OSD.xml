      <IconButton id="videoPlayPause" padding="16" icon="pkg:/images/icons/play.png" height="65" width="65" />
      <IconButton id="chapterNext" padding="16" icon="pkg:/images/icons/nextChapter.png" height="65" width="65" />
      <IconButton id="itemNext" padding="16" icon="pkg:/images/icons/itemNext.png" height="65" width="65" />
    </ButtonGroup>

    <ButtonGroup id="optionControls" itemSpacings="[12]" layoutDirection="horiz" horizAlignment="right" translation="[1900,1000]">
      <IconButton id="chapterList" padding="16" icon="pkg:/images/icons/numberList.png" height="65" width="65" />
      <IconButton id="showSubtitleMenu" padding="16" icon="pkg:/images/icons/subtitle.png" height="65" width="65" />
      <IconButton id="showAudioMenu" padding="16" icon="pkg:/images/icons/musicNote.png" height="65" width="65" />
    </ButtonGroup>

    <ExpandingLabel
      translation="[705, 805]"
      id="previousItem"
      visible="false"
      icon=""
      iconHeight="32"
      iconWidth="32"
      iconAlign="left"
      text=""
      backgroundColor="0x00000095"
      maxWidth="500"
      horizAlign="left"
      horizOffset="64"
      alignmentSide="right"
      fontSize="27"
      padding="[20, 10]"
    />

    <ExpandingLabel
      translation="[1150, 805]"
      id="nextItem"
      visible="false"
      icon=""
      iconHeight="32"
      iconWidth="32"
      iconAlign="left"
      text=""
      backgroundColor="0x00000095"
      maxWidth="500"
      horizAlign="left"
      fontSize="27"
      padding="[20, 10]"
    />

    <Rectangle id="progressBarBackground" width="1656" height="8" translation="[132,970]">
      <Rectangle id="progressBar" width="0" height="8" />
    </Rectangle>

    <Label id="videoPositionTime" font="font:SmallestSystemFont" color="0xffffffFF" horizAlign="left" translation="[20,955]">
      <Font role="font" uri="pkg:/images/fonts/NotoSans-Regular.ttf" size="24" />
