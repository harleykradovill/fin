<?xml version="1.0" encoding="utf-8"?>
<component name="Settings" extends="JFScreen">
  <children>

    <Text id="path" translation="[160, 50]" size="42" />

    <LabelList
      translation="[193, 150]"
      id="settingsMenu"
      font="font:SmallSystemFont"
      itemSize="[300, 60]"
      itemSpacing="[0,10]"
      numRows="6"
      vertFocusAnimationStyle="floatingFocus">
      <Font role="font" uri="pkg:/images/fonts/NotoSans-Regular.ttf" size="28" />
      <Font role="focusedFont" uri="pkg:/images/fonts/NotoSans-Regular.ttf" size="28" />
    </LabelList>

    <Poster translation="[710, 230]" id="testRectangle" width="1110" height="800" uri="pkg:/images/white.9.png" />

    <Text id="settingDesc" translation="[160, 1025]" width="1700" wrap="true" color="#808080" horizAlign="left" size="24" />

    <RadioButtonList id="radioSetting" numRows="6" vertFocusAnimationStyle="floatingFocus" translation="[1034, 510]" />

    <RadioButtonList id="boolSetting" vertFocusAnimationStyle="floatingFocus" translation="[1034, 510]">
      <ContentNode role="content">
        <ContentNode title="Disabled" />
        <ContentNode title="Enabled" />
      </ContentNode>
    </RadioButtonList>

    <Group id="serverInfo" translation="[600, 141]" visible="false">
      <Text text="Server Name" horizAlign="left" size="32" />
      <Text id="serverName" horizAlign="left" size="28" translation="[0, 40]" color="#cccccc" />

      <Text text="Server Version" horizAlign="left" size="32" translation="[0, 100]" />
      <Text id="serverVersion" horizAlign="left" size="28" translation="[0, 140]" color="#cccccc" />

      <Text text="Server URL" horizAlign="left" size="32" translation="[0, 200]" />
      <Text id="serverURL" horizAlign="left" size="28" translation="[0, 240]" color="#cccccc" />

      <Text text="Connection Health" horizAlign="left" size="32" translation="[0, 300]" />
      <Text id="serverHealth" horizAlign="left" size="28" translation="[0, 340]" color="#cccccc" />
    </Group>

    <Group id="buildInfo" translation="[600, 141]" visible="false">
      <Text text="build info" horizAlign="left" size="32" />
    </Group>

    <IntegerKeyboard translation="[1034, 510]" id="integerSetting" domain="numeric" visible="false" />
    <Timer id="keypressTimer" duration="5" />
  </children>

  <interface>
    <field id="showSidebar" type="boolean" value="true" />
  </interface>
</component>