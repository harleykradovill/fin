{
  "files": [
    "manifest",
    "source/**/*.*",
    "components/**/*.*",
    "images/**/*.*",
    "locale/**/*.*",
    "settings/*.*",
    "fonts/*.*"
  ],
  "plugins": [
    "@rokucommunity/bslint"
  ],
  "diagnosticFilters": [
    "node_modules/**/*",
    "**/roku_modules/**/*"
  ],
  "sourceMap": true,
  "autoImportComponentScript": true,
  "stagingDir": "build/staging",
  "retainStagingDir": true
}